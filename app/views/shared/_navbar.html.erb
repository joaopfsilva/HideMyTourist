<div class="navbar-wagon navbar-wagon-fixed">

  <!-- Logo -->
  <%= link_to root_path do %>
  <%= image_tag "http://res.cloudinary.com/dc2fg86gy/image/upload/tables_h0g24v", class: "navbar-wagon-brand", style: "width:100px" %>
  <% end %>

  <!-- Different navigation if login or not -->
  <% if user_signed_in? %>
  <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- Text link -->
      <%  if !current_user.facebook_picture_url.nil? %>
        <%= image_tag current_user.facebook_picture_url, class: "avatar"%>
      <% end %>
      <%= link_to "Help", root_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Logout", root_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Profile", root_path, class: "navbar-wagon-item navbar-wagon-link"  %>

      <% if current_user.profile.is_host %>
        <%= link_to "List your tables", root_path, class: "navbar-wagon-item navbar-wagon-button btn"  %>
      <% else %>
        <%= link_to "View your bookings", root_path, class: "navbar-wagon-item navbar-wagon-button btn"  %>
      <% end %>
    </div>
  <% else %>

  <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

  <!-- Text link -->
      <%= link_to "Help", root_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Login", root_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <%= link_to "Sign up", root_path, class: "navbar-wagon-item navbar-wagon-link"  %>
      <!--<%= link_to "List your table", root_path, class: "navbar-wagon-item navbar-wagon-button btn"  %> -->
      <!--<%= link_to "List your table", root_path, class: "navbar-wagon-item navbar-wagon-button btn"  %> -->

    </div>

  <% end %>

</div>

<!-- Dropdown appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li><a href="#">Help</a></li>
      <li><a href="#">Login</a></li>
      <li><a href="#">Sign up</a></li>
      <li><a href="#">List your table</a></li>
    </ul>
  </div>
</div>
</div>

